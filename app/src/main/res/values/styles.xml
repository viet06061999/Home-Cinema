<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/color_woodsmoke</item>
        <item name="android:fontFamily">@string/default_font</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_16</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
